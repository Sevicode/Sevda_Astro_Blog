---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: string;
  link?: string;
  github?: string;
  tags: string[];
  tech: string[];
}

const { title, description, image, link, github, tags, tech } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
  <div class="aspect-video relative overflow-hidden">
    <Image
      src={image}
      alt={title}
      width={800}
      height={450}
      class="object-cover w-full h-full"
    />
  </div>
  <div class="p-6 space-y-4">
    <h2 class="text-2xl font-semibold text-gray-900">{title}</h2>
    <p class="text-gray-600">{description}</p>
    
    <div class="space-y-4">
      <div class="flex flex-wrap gap-2">
        {tech.map((item) => (
          <span class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full">
            {item}
          </span>
        ))}
      </div>
      
      <div class="flex gap-4">
        {link && (
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 border border-primary text-primary hover:bg-primary hover:text-white rounded-md transition-colors"
          >
            View Live
          </a>
        )}
        {github && (
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 border border-gray-200 text-gray-700 hover:bg-gray-50 rounded-md transition-colors"
          >
            GitHub
          </a>
        )}
      </div>
    </div>
  </div>
</article>