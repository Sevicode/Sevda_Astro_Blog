---
interface Props {
  tags: string[];
  selectedTag?: string;
}

const { tags, selectedTag } = Astro.props;
---

<div class="flex flex-wrap gap-2 mb-8">
  {tags.map((tag) => (
    <a
      href={`/blog/tag/${tag}`}
      class:list={[
        'px-3 py-1 rounded-full text-sm transition-colors',
        selectedTag === tag
          ? 'bg-primary text-white'
          : 'bg-gray-100 text-gray-600 hover:bg-gray-200'
      ]}
    >
      {tag}
    </a>
  ))}
</div>